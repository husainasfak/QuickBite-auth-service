{
    "name": "auth-service",
    "version": "1.0.0",
    "scripts": {
        "build": "tsc",
        "build-dev": "cp .env.dev ./dist/.env.dev && tsc",
        "start:build": "cross-env NODE_ENV=dev node dist/src/server.js",
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "jest --no-cache --coverage --all --runInBand",
        "prepare": "husky",
        "dev:docker": "docker run --rm -it -v $(pwd):/usr/src/app -v /usr/src/app/node_modules --env-file $(pwd)/.env -p 5501:5501 -e NODE_ENV=development auth-service:dev",
        "pg:run": "docker run --rm --name auth-service-pg-container -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -v auth-service-pg-data:/var/lib/postgresql/data -p 5432:5432 -d postgres",
        "start": "ts-node src/index.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate",
        "migration:generate:run": "npm run migration:generate -- src/migration/migration -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run",
        "migration:run:run": "npm run migration:run -- -d src/config/data-source.ts",
        "migration:create": "typeorm-ts-node-commonjs migration:create"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/js": "^8.57.1",
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^18.19.64",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^10.0.0",
        "@types/winston": "^2.4.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^7.2.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.2.0",
        "http-errors": "^2.0.0",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "supertest": "^6.3.3",
        "typeorm": "0.3.20",
        "uuid": "^11.0.3",
        "winston": "^3.16.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    }
}

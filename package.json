{
    "name": "auth-service",
    "version": "1.0.0",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "jest --watch --runInBand",
        "prepare": "husky",
        "dev:docker": "docker run --rm -it -v $(pwd):/usr/src/app -v /usr/src/app/node_modules --env-file $(pwd)/.env -p 5501:5501 -e NODE_ENV=development auth-service:dev",
        "pg:run": "docker run --rm --name auth-service-pg-container -e POSTGRES_USER=root -e POSTGRES_PASSWORD=root -v auth-service-pg-data:/var/lib/postgresql/data -p 5432:5432 -d postgres",
        "start": "ts-node src/index.ts",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/js": "^8.57.1",
        "@types/bcrypt": "^5.0.2",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^16.11.10",
        "@types/supertest": "^2.0.12",
        "@types/winston": "^2.4.4",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.1",
        "typescript": "4.5.2",
        "typescript-eslint": "^7.2.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-validator": "^7.2.0",
        "http-errors": "^2.0.0",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "supertest": "^6.3.3",
        "typeorm": "0.3.20",
        "winston": "^3.16.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    }
}
